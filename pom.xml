<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.fiware.dataspace</groupId>
    <artifactId>odrl-authorization</artifactId>
    <version>0.0.1</version>
    <packaging>pom</packaging>
    <modules>
        <module>it</module>
    </modules>
    <properties>
        <jdk.version>21</jdk.version>
        <release.version>21</release.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <version.io.kokuwa.maven.k3s-plugin>1.3.0</version.io.kokuwa.maven.k3s-plugin>
        <version.io.kokuwa.helm-maven-plugin>6.13.0</version.io.kokuwa.helm-maven-plugin>
        <version.org.apache.maven.plugins.maven-install>3.1.1</version.org.apache.maven.plugins.maven-install>
        <version.org.apache.maven.plugins.maven-source>2.4</version.org.apache.maven.plugins.maven-source>
        <version.org.apache.maven.plugins.maven-jar>3.3.0</version.org.apache.maven.plugins.maven-jar>
        <version.org.apache.maven.plugins.maven-dependency>3.1.1</version.org.apache.maven.plugins.maven-dependency>
        <version.org.apache.maven.plugins.maven-surefire>3.0.0</version.org.apache.maven.plugins.maven-surefire>
        <version.org.apache.maven.plugins.maven-failsafe>3.0.0</version.org.apache.maven.plugins.maven-failsafe>
        <version.localpath>0.0.32</version.localpath>
        <main.basedir>${project.basedir}</main.basedir>
        <kubeconfig.file>${project.build.directory}/k3s.yaml</kubeconfig.file>
        <skipDeployInfra>true</skipDeployInfra>
        <skipIT>false</skipIT>
    </properties>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>${version.org.apache.maven.plugins.maven-install}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${version.org.apache.maven.plugins.maven-source}</version>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>${version.org.apache.maven.plugins.maven-dependency}</version>

            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${version.org.apache.maven.plugins.maven-jar}</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${version.org.apache.maven.plugins.maven-surefire}</version>
                <executions>
                    <execution>
                        <id>default-test</id>
                        <phase/>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${version.org.apache.maven.plugins.maven-failsafe}</version>
                <configuration>
                    <skip>${skipIT}</skip>
                    <failIfNoTests>false</failIfNoTests>
                    <includes>
                        <include>**/RunCucumberTest.java</include>
                    </includes>
                </configuration>
                <executions>
                    <execution>
                        <id>test</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>integration-test</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>verify</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>

            <plugin>
                <groupId>io.github.download-maven-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>2.0.0</version>
                <configuration>
                    <skip>${skipDeployInfra}</skip>
                    <url>
                        https://raw.githubusercontent.com/rancher/local-path-provisioner/v${version.localpath}/deploy/local-path-storage.yaml
                    </url>
                    <unpack>false</unpack>
                    <outputDirectory>${project.build.directory}/tmp</outputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>download-local-storage</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>download-local-storage-it</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>io.kokuwa.maven</groupId>
                <artifactId>k3s-maven-plugin</artifactId>
                <version>${version.io.kokuwa.maven.k3s-plugin}</version>
                <configuration>
                    <skip>${skipDeployInfra}</skip>
                    <portBindings>
                        <portBinding>30080:30080</portBinding>
                    </portBindings>
                    <failIfExists>false</failIfExists>
                    <manifests>${project.build.directory}/tmp/local-path-storage.yaml</manifests>
                </configuration>
                <executions>
                    <execution>
                        <id>deploy-local-storage</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>run</goal>
                            <goal>apply</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>deploy-local-storage-it</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>run</goal>
                            <goal>apply</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.1</version>
                <configuration>
                    <skip>${skipDeployInfra}</skip>
                    <executable>helmfile</executable>
                    <arguments>
                        <argument>sync</argument>
                        <argument>-f</argument>
                        <argument>deploy/helmfile.yaml</argument>
                        <argument>--wait</argument>
                    </arguments>
                    <environmentVariables>
                        <KUBECONFIG>${kubeconfig.file}</KUBECONFIG>
                    </environmentVariables>
                </configuration>
                <executions>
                    <execution>
                        <id>test-env</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>it-env</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>local</id>
            <properties>
                <skipDeployInfra>false</skipDeployInfra>
                <skipIT>true</skipIT>
            </properties>
        </profile>
        <profile>
            <id>test</id>
            <properties>
                <skipDeployInfra>false</skipDeployInfra>
                <skipIT>false</skipIT>
            </properties>
        </profile>
    </profiles>

</project>